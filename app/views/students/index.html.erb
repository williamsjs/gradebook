<p id="notice"><%= notice %></p>

<h1>Listing Grades for <%= @student.name %></h1>

<table>
  <thead>
    <tr>
      <th>Value</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student.grades.each do |grade| %>
      <tr>
        <td><%= grade.value %></td>
        <td><%= grade.assignment %></td>
        <td><%= link_to 'Show', grade %></td>
        <td><%= link_to 'Edit', edit_grade_path(grade) %></td>
        <td><%= link_to 'Destroy', grade, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Add Grade", new_grade_path %>
